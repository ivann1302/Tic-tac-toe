{
  "name": "tic-tac-toe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss}\"",
    "preview": "vite preview",
    "commit": "cz",

    "docker:build": "docker build -t tic-tac-toe:latest .",
    "docker:run": "docker run -d -p 3000:3000 --name tic-tac-toe-app tic-tac-toe:latest",
    "docker:stop": "docker stop tic-tac-toe-app && docker rm tic-tac-toe-app",
    "docker:restart": "npm run docker:stop && npm run docker:run",
    "docker:logs": "docker logs tic-tac-toe-app",
    "docker:ps": "docker ps",
    "docker:images": "docker images",
    "docker:exec": "docker exec -it tic-tac-toe-app sh",
    "docker:stats": "docker stats tic-tac-toe-app",
    "docker:clean": "docker system prune -f",
    
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:restart": "npm run docker:compose:down && npm run docker:compose"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "prettier": "^3.6.2",
    "sass": "^1.90.0",
    "typescript": "^5.9.2",
    "vite": "^6.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
